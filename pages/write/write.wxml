<view class="add_pic" bindtap="uploadPic" wx-if="{{!isSrc}}">
  <view>添加图片(可选)</view>
</view>

<view wx:if="{{isSrc}}" class="image_box">
  <view class="picPre">
    <image src="{{src}}" mode="aspectFill"></image>
    <view bindtap="clearPic"></view>
  </view>
</view>

<input placeholder="输入标题(可选)" class="add_title" value="" bindinput="setTitle" />

<view class="addConent">
  <textarea 
    placeholder="亲，尽情匿名分享你的小秘密吧" 
    maxlength="3000" 
    value="" 
    bindblur="setContent" 
    bindconfirm="setContent" />
</view>

<button 
  bindtap="sendNewMood" 
  data-content="{{content}}" 
  loading="{{isLoading}}" 
  data-title="{{title}}" 
  hover-start-time="200" 
  disabled="{{isdisabled}}">
  分享
</button>